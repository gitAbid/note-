<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="16sp"
        android:layout_width="match_parent"
        android:id="@+id/llNotebookItem"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
                android:gravity="center"
                android:layout_weight="15"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Create New Notebook"/>

        <ImageView
                android:layout_weight="50"
                android:src="@drawable/ic_notebook"
                android:id="@+id/iv_module_img"
                android:layout_width="300dp"
                android:layout_height="0dp"
        />
        <View android:layout_width="wrap_content"
              android:layout_weight="5"
              android:layout_height="0dp"/>
        <EditText
                android:layout_weight="10"
                android:maxLines="1"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:hint="Notebook"
                android:textAlignment="center"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"/>
        <View android:layout_width="wrap_content"
              android:layout_weight="5"
              android:layout_height="0dp"/>
        <TextView
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                style="@style/TextAppearance.MaterialComponents.Button"
                android:layout_weight="10"
                android:text="Create Notebook"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:background="@drawable/pale_blue_bordered_background"
                android:layout_height="0dp"
                android:focusable="true"/>
    </LinearLayout>


</RelativeLayout>

