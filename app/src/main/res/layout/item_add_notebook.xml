<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/dotted_border_background"
              android:layout_width="150dp"
              android:layout_marginRight="4dp"
              android:layout_height="match_parent">


    <ImageView android:id="@+id/ivAddNotebook"
               android:tint="@color/colorPrimary"
               android:layout_gravity="center"
               android:layout_marginBottom="10dp"
               android:layout_centerInParent="true" android:layout_width="80dp"
               android:src="@drawable/ic_add_circle_outline_black_24dp"
               android:layout_height="80dp"/>

    <TextView
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/ivAddNotebook" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/add_notebook_text"/>
</RelativeLayout>