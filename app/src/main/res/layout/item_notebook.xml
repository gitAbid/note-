<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="125dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginRight="4dp"
        android:id="@+id/llNotebookItem"
        app:cardElevation="0dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
                android:background="@drawable/gray_border_background"
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:src="@drawable/ic_notebook"
                    android:id="@+id/iv_module_img"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"/>

            <TextView
                    android:maxLines="2"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    android:id="@+id/tvNotebookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textStyle="bold"/>

        </LinearLayout>
</android.support.v7.widget.CardView>

