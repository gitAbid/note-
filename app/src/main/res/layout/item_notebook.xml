<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:id="@+id/llNotebookItem"
              android:background="@drawable/gray_border_background"
              android:layout_width="150dp"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:layout_gravity="center"
                android:id="@+id/tvNotebookTitle"
                android:text="Notebook"
                android:padding="8dp"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Title" android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>